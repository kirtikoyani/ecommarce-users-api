{
  "exclude": [
    "**/*.spec.ts",
  ],
  "compilerOptions": {
    "target": "ES2019",
    "moduleDetection": "force", 
    "module": "commonjs",
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "noEmitOnError": true,
    "forceConsistentCasingInFileNames": true,                                
  }
}